{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"],
            "components/*": ["./components/*"],
            "lib/*": ["./lib/*"],
            "styles/*": ["./styles/*"]
